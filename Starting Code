#include <Servo.h> 

Servo myservo; 
const int buttonPin = 2;
const int LED1 = 11;
const int LED2 = 13;  

void setup() {
  myservo.attach(9);
  pinMode(buttonPin, INPUT);
  pinMode(LED1, OUTPUT);
  pinMode(LED2, OUTPUT);

}

void loop() {
  if(digitalRead(buttonPin) == HIGH){
    myservo.write(180);
    digitalWrite(LED1, HIGH);
    digitalWrite(LED2, HIGH);
    tone(8, 100, 2000);
  } else {
    myservo.write(0);
    digitalWrite(LED1, LOW);
    digitalWrite(LED2, LOW);
    noTone(8);
  }
}
